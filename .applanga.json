{
  "app": {
    "base_language": "en",
    "push": {
      "source": [
        {
          "language": "en",
          "file_format": "i18next_json",
          "path": "./react_json_sample/en/secondsourcefile.json",
          "tag": "SecondSourceJson"
        },
        {
          "language": "en",
          "file_format": "i18next_json",
          "path": "./react_json_sample/en/translations.json",
          "tag": "TransaltionJson"
        }
      ]
    },
    "pull": {
      "target": [
        {
          "exclude_languages": [
            "en"
          ],
          "file_format": "i18next_json",
          "path": "./react_json_sample/en/<language>_translation.json",
          "tag": "SecondSourceJson"
        },
        {
          "exclude_languages": [
            "en"
          ],
          "file_format": "i18next_json",
          "path": "./react_json_sample/en/<language>_second.json",
          "tag": "TransaltionJson"
        }
      ]
    }
  }
}